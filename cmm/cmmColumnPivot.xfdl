/************************************************************************************************
* FORM 변수 선언 영역
************************************************************************************************/
this.fvTargetGrid; 	  //대상그리드 OBJECT
this.fvTargetDataset; //대상데이터셋 OBJECT
this.fvTempDataset;//원본데이터저장용 데이터셋
 
/***********************************************************************************************
* FORM EVENT 영역(onload)
/***********************************************************************************************/
this.form_onload = function(obj:nexacro.Form,e:nexacro.LoadEventInfo)
{
	this.gfn_FormOnLoad(this);
	
// 	var sTitle = this.getOwnerFrame().paramTitle;
// 	this.set_titletext(sTitle);
	
	//초기값 설정
	this.fvTargetGrid = this.getOwnerFrame().pvGrid;
	this.fvTargetDataset = this.fvTargetGrid.getBindDataset();
	var dsId = this.fvTargetDataset.id+"PvTemp";

	var sWinId = this.parent.parent.parent.parent.name;
	var framesInfo = nApp.gvWorkFrame.frames; //WorkFrame 정보
	var oCallScrn = framesInfo[sWinId];	
	
	//임시 데이터셋이 존재하지 않으면 - 생성
	if (this.gfn_IsNull(oCallScrn.form.div_Work.form.all[dsId])) {
		var dsObj = new Dataset;
		dsObj.set_name(dsId);//데이터셋명 설정
		oCallScrn.form.div_Work.form.addChild(dsObj.name, dsObj);//해당 화면에 데이터셋 등록		
	}
	
	this.fvTempDataset = eval("oCallScrn.form.div_Work.form." + dsId);//원본데이터저장용 데이터셋

	if (this.gfn_IsNull(this.fvTargetGrid.TempDataSetInfo)) {
		this.fvTempDataset.copyData(this.fvTargetDataset);
		this.fvTargetGrid.OrgFormatInfo = this.fvTargetGrid.formats;
	}
	
	//trace(this.fvTempDataset.saveXML());
	this.fn_GetHeadText();

	this.fn_SetGrd();
	
	//trace(this.ds_FilterCol.saveXML());	
};

